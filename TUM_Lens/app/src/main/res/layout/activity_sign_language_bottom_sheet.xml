<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_language_bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp" >

    <!--  DRAG INDICATOR of bottom sheet  -->
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_spacer"
        tools:ignore="ContentDescription" />

    <!--  HEADING of bottom sheet  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/suggestions"
        android:textSize="20sp"
        android:textColor="@color/black" />


    <!--  horizontal separator  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="16dp"/>

    <!--  PER FRAME RESULTS CONTAINER  -->
    <!--  SUB-HEADING of bottom sheet  -->
    <TextView
        android:id="@+id/sub_heading_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/per_frame_classification_results"
        android:textSize="16sp"
        android:textColor="@color/black" />
    <FrameLayout
        android:id="@+id/perframe_results_container_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--  horizontal separator  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginVertical="16dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>